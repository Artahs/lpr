{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<section style="padding-top:7%">
		<h1 style="color:white;">Utilisateur</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Password</th>
					<th>Pseudo</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.password }}</td>
						<td>{{ user.pseudo }}</td>
						<td>
							<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_user_new') }}">Create new</a>
	</section>
	<section>
		<h1 style="color:white;">Produit</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Prix</th>
					<th>Image</th>
					<th>Nombre de commande</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for produit in produits %}
					<tr>
						<td>{{ produit.id }}</td>
						<td>{{ produit.nom }}</td>
						<td>{{ produit.description }}</td>
						<td>{{ produit.prix }}</td>
						<td>{{ produit.image }}</td>
						<td>{{produit.nombreCommande}}</td>
						<td>
							<a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
							<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_produit_new') }}">Create new</a>
	</section>

	{{ include('footer.html.twig') }}
{% endblock %}
