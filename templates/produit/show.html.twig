{% extends 'base.html.twig' %}


{% block body %}
	<main class="w-100 h-100" style="overflow:hidden; margin-bottom:1%;">
		<section class="produit-section">
			<div class="d-flex" style="justify-content:space-between;">
				<div class="mx-4">
					<a href="{{ path('app_produit_index') }}" class="button-retour">
						<div class="button-retour-box">
							<span class="button-retour-elem">
								<svg viewbox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
									<path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
								</svg>
							</span>
							<span class="button-retour-elem">
								<svg viewbox="0 0 46 40">
									<path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
								</svg>
							</span>
						</div>
					</a>
				</div>

				{% if is_granted('ROLE_ADMIN')%}
					<div class="d-flex">
						<a class="mx-4 produit-edit" href="{{ path('app_produit_edit', {'id': produit.id}) }}">
							<lord-icon src="https://cdn.lordicon.com/wkvacbiw.json" trigger="hover" colors="primary:#ffffff" style="width:25px;height:25px"></lord-icon>
						</a>
						{{ include('produit/_delete_form.html.twig') }}
					</div>
				{% endif %}
			</div>
			<div class="d-flex row mt-2" style="color:white; height:50%;">
				<div class="col">
					<div class="container d-flex justify-content-center"><img src="{{asset(produit.image)}}"></div>
				</div>
				<div class="col">
					<h1>{{produit.nom}}</h1>
					<p>{{produit.description}}</p>

					<div class="d-flex">
						<span class="produit-prix">{{produit.prix}}â‚¬</span>
						{% if app.user %}
							<a class="mx-4 btn-compte" href="{{path('ajouter_au_panier', {'id': produit.id})}}">Ajouter au panier</a>
						{% else %}
							<a class="mx-4 produit-prix button-achat" href="{{ path('app_login') }}">Se connecter</a>
						{% endif %}
					</div>
				</div>
			</div>
		</section>
	</main>
	{{ include('footer.html.twig') }}

{% endblock %}
