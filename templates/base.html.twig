<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}LPR
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('asset/icon.ico')}}" type="image/x-icon">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% block stylesheets %}{% endblock %}
		<script src="https://cdn.lordicon.com/lordicon.js"></script>
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header class="w-100">
			<nav class="navbar navbar-expand-lg">
				<div class="container-fluid">
					<a class="navbar-brand logo" href="{{ path('home') }}"></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse flex-grow-0" id="navbarNavAltMarkup">
						<div class="navbar-nav">
							<a class="nav-link na-txt text-light" aria-current="page" href="{{ path('home') }}">
								Accueil
							</a>
							<a class="nav-link na-txt text-light" href="{{ path('app_produit_index') }}">
								Boutique
							</a>
							{% if app.user %}
								{% if is_granted('ROLE_ADMIN') %}
									<a class="nav-link na-txt text-light" href="{{ path('app_user_index') }}">
										Panel
									</a>
								{% endif %}
								<a class="nav-link na-txt text-light" href="{{ path('compte') }}">
									Mon compte
								</a>
							{% else %}
								<a class="nav-link na-txt text-light" href="{{ path('app_login') }}">
									Connexion
								</a>
							{% endif %}
						</div>
					</div>
				</div>
			</nav>
		</header>
		{% block body %}{% endblock %}
	</body>
</html>
